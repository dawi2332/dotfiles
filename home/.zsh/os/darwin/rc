cdpath+=~/Documents

export LSCOLORS="exfxcxdxbxgxdxBxGxCxDx"
whence dircolors &>/dev/null 2>&1 && eval `dircolors`

if [[ ! -n $SSH_CONNECTION ]]
then
    export EDITOR='mvim'
    export VISUAL='mvim'
    alias vim=mvim
    alias ex=mex
    alias view=mview
    alias rvim=rmvim
    alias vimdiff=mvimdiff
fi

alias ldd='otool -L'
alias top='top -ocpu'
alias topx='top -ocpu -X'

# vim: ft=zsh ts=8 st=4 sts=4 et
