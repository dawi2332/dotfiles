cdpath+=~/Documents

if [[ `whence -p ls` == /bin/ls ]]
then
    export CLICOLOR=1
    export LSCOLORS="exfxcxdxbxgxdxBxGxCxDx"
else
    eval `dircolors`
    alias ls='ls --color=auto'
fi

if [[ ! -n $SSH_CONNECTION ]]
then
    export EDITOR='mvim'
    export VISUAL='mvim'
    alias vim=mvim
    alias ex=mex
    alias view=mview
    alias rvim=rmvim
fi

# vim: ft=zsh ts=8 st=4 sts=4 et
